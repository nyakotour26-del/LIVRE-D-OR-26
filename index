    <script>
        // URL de votre Google Sheet en format CSV
        const GOOGLE_SHEETS_URL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vSXIJyclDLf2asT-FMnmaeWMSPtQHxpAC1wiGJ_xzXbl2StziwiUw9ElW9XyK5yemQ-PHaWlRQbtdHb/pub?gid=1016056321&single=true&output=csv';
        
        // Variables globales
        let sheetData = [];
        let headers = [];
        let datesWithData = [];
        let currentDate = new Date();
        let selectedDate = null;
        let allLieux = [];
        let allNoms = [];
        let allPays = [];
        let currentFilter = null;
        let currentFilterType = null;

        // Initialisation au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ D√©marrage de l\'application Livre d\'Or...');
            loadDataFromGoogleSheets();
            
            // Configuration des √©v√©nements
            document.getElementById('searchForm').addEventListener('submit', handleSearch);
            document.getElementById('prevMonth').addEventListener('click', prevMonth);
            document.getElementById('nextMonth').addEventListener('click', nextMonth);
            document.getElementById('showAllButton').addEventListener('click', showAllData);
            document.getElementById('closeResults').addEventListener('click', closeResults);
            
            // √âv√©nements pour les suggestions
            const searchInput = document.getElementById('searchInput');
            const suggestionsContainer = document.getElementById('suggestionsContainer');
            
            searchInput.addEventListener('input', function() {
                showSearchSuggestions(this.value);
            });
            
            searchInput.addEventListener('focus', function() {
                if (this.value) {
                    showSearchSuggestions(this.value);
                }
            });
            
            document.addEventListener('click', function(e) {
                if (!searchInput.contains(e.target) && !suggestionsContainer.contains(e.target)) {
                    suggestionsContainer.style.display = 'none';
                }
            });
        });

        // Chargement des donn√©es depuis Google Sheets
        async function loadDataFromGoogleSheets() {
            console.log('üì• Chargement des donn√©es depuis Google Sheets...');
            document.getElementById('loadingIndicator').style.display = 'block';
            
            try {
                // Utilisation d'un proxy CORS
                const proxyUrl = 'https://api.allorigins.win/raw?url=';
                const response = await fetch(proxyUrl + encodeURIComponent(GOOGLE_SHEETS_URL));
                
                if (!response.ok) {
                    throw new Error(`Erreur HTTP: ${response.status}`);
                }
                
                const csvText = await response.text();
                console.log('‚úÖ Donn√©es CSV r√©cup√©r√©es');
                processCSVData(csvText);
                
            } catch (error) {
                console.error('‚ùå Erreur de chargement:', error);
                showError('Impossible de charger les donn√©es. V√©rifiez votre connexion internet.');
            } finally {
                document.getElementById('loadingIndicator').style.display = 'none';
            }
        }

        // Traitement des donn√©es CSV
        function processCSVData(csvText) {
            try {
                if (!csvText || csvText.trim().length === 0) {
                    throw new Error('Le fichier CSV est vide');
                }
                
                // S√©paration des lignes
                const lines = csvText.split('\n').filter(line => line.trim() !== '');
                
                if (lines.length === 0) {
                    throw new Error('Aucune donn√©e dans le CSV');
                }
                
                // Extraction des en-t√™tes (premi√®re ligne)
                headers = parseCSVLine(lines[0]);
                console.log('üìã En-t√™tes d√©tect√©s:', headers);
                
                // Extraction des donn√©es
                sheetData = [];
                for (let i = 1; i < lines.length; i++) {
                    const row = parseCSVLine(lines[i]);
                    if (row.some(cell => cell && cell.trim() !== '')) {
                        sheetData.push(row);
                    }
                }
                
                console.log('‚úÖ Donn√©es charg√©es:', sheetData.length, 'entr√©es');
                
                if (sheetData.length === 0) {
                    throw new Error('Aucune entr√©e de livre d\'or trouv√©e');
                }
                
                // Traitement des donn√©es
                extractDatesWithData();
                extractAllLieux();
                extractAllNoms();
                extractAllPays();
                updateStats();
                renderFilterTags();
                renderCalendar();
                
                // Message de succ√®s
                showDataInfo();
                
            } catch (error) {
                console.error('‚ùå Erreur de traitement:', error);
                showError(error.message);
            }
        }

        // Parse une ligne CSV
        function parseCSVLine(line) {
            const result = [];
            let current = '';
            let inQuotes = false;
            
            for (let i = 0; i < line.length; i++) {
                const char = line[i];
                
                if (char === '"') {
                    inQuotes = !inQuotes;
                } else if (char === ',' && !inQuotes) {
                    result.push(current);
                    current = '';
                } else {
                    current += char;
                }
            }
            
            result.push(current);
            return result.map(field => field.trim());
        }

        // Extraction des dates avec donn√©es (colonne B)
        function extractDatesWithData() {
            datesWithData = [];
            // La colonne B est g√©n√©ralement l'index 1 (deuxi√®me colonne)
            const dateColumnIndex = 1;
            
            sheetData.forEach((row, index) => {
                const dateStr = row[dateColumnIndex] || '';
                if (dateStr && dateStr.trim() !== '') {
                    const date = parseDate(dateStr);
                    if (date) {
                        datesWithData.push({
                            date: date,
                            dateStr: dateStr,
                            rowIndex: index
                        });
                    }
                }
            });
            
            datesWithData.sort((a, b) => a.date - b.date);
            console.log('üìÖ Dates avec donn√©es:', datesWithData.length);
        }

        // Extraction de tous les lieux
        function extractAllLieux() {
            const allLieuxSet = new Set();
            // Recherche de la colonne "Lieu de l'√©v√©nement"
            const lieuIndex = headers.findIndex(h => 
                h.toLowerCase().includes('lieu') && h.toLowerCase().includes('√©v√©nement')
            );
            
            if (lieuIndex !== -1) {
                sheetData.forEach(row => {
                    const value = row[lieuIndex] || '';
                    if (value.trim()) allLieuxSet.add(value.trim());
                });
            }
            
            allLieux = Array.from(allLieuxSet).sort();
            console.log('üìç Lieux extraits:', allLieux);
        }

        // Extraction de tous les noms
        function extractAllNoms() {
            const allNomsSet = new Set();
            // Recherche de la colonne "Votre Nom"
            const nomIndex = headers.findIndex(h => 
                h.toLowerCase().includes('votre') && h.toLowerCase().includes('nom')
            );
            
            if (nomIndex !== -1) {
                sheetData.forEach(row => {
                    const value = row[nomIndex] || '';
                    if (value.trim()) {
                        // S√©paration des noms s'il y en a plusieurs
                        value.split(/[,;]/).forEach(nom => {
                            const trimmed = nom.trim();
                            if (trimmed) allNomsSet.add(trimmed);
                        });
                    }
                });
            }
            
            allNoms = Array.from(allNomsSet).sort();
            console.log('üë§ Noms extraits:', allNoms);
        }

        // Extraction de tous les pays
        function extractAllPays() {
            const allPaysSet = new Set();
            // Recherche de la colonne "Pays"
            const paysIndex = headers.findIndex(h => h.toLowerCase().includes('pays'));
            
            if (paysIndex !== -1) {
                sheetData.forEach(row => {
                    const value = row[paysIndex] || '';
                    if (value.trim()) allPaysSet.add(value.trim());
                });
            }
            
            allPays = Array.from(allPaysSet).sort();
            console.log('üåç Pays extraits:', allPays);
        }

        // Mise √† jour des statistiques
        function updateStats() {
            document.getElementById('totalMessages').textContent = sheetData.length;
            document.getElementById('totalLieux').textContent = allLieux.length;
            document.getElementById('totalNoms').textContent = allNoms.length;
            document.getElementById('totalPays').textContent = allPays.length;
        }

        // Rendu des tags de filtre
        function renderFilterTags() {
            renderTags('lieuxTags', allLieux, 'lieu');
            renderTags('nomsTags', allNoms, 'nom');
            renderTags('paysTags', allPays, 'pays');
        }

        // Rendu des tags pour un type donn√©
        function renderTags(containerId, items, type) {
            const container = document.getElementById(containerId);
            container.innerHTML = '';
            
            if (items.length === 0) {
                container.innerHTML = '<div style="color: #7f8c8d; font-style: italic;">Aucun ' + type + ' trouv√©</div>';
                return;
            }
            
            items.forEach(item => {
                const tag = document.createElement('div');
                tag.className = `tag ${type}`;
                tag.textContent = item;
                tag.title = `Filtrer par ${type}: ${item}`;
                
                tag.addEventListener('click', () => {
                    currentFilter = item;
                    currentFilterType = type;
                    const results = filterDataByType(item, type);
                    displayResults(results, `${type.charAt(0).toUpperCase() + type.slice(1)}: ${item}`);
                });
                
                container.appendChild(tag);
            });
        }

        // Filtrage des donn√©es par type
        function filterDataByType(value, type) {
            let columnIndex = -1;
            
            switch(type) {
                case 'lieu':
                    columnIndex = headers.findIndex(h => 
                        h.toLowerCase().includes('lieu') && h.toLowerCase().includes('√©v√©nement')
                    );
                    break;
                case 'nom':
                    columnIndex = headers.findIndex(h => 
                        h.toLowerCase().includes('votre') && h.toLowerCase().includes('nom')
                    );
                    break;
                case 'pays':
                    columnIndex = headers.findIndex(h => h.toLowerCase().includes('pays'));
                    break;
            }
            
            if (columnIndex === -1) return [];
            
            return sheetData.filter(row => {
                const cellValue = row[columnIndex] || '';
                return cellValue.includes(value);
            });
        }

        // Rendu du calendrier
        function renderCalendar() {
            const grid = document.getElementById('calendarGrid');
            const monthElement = document.getElementById('currentMonth');
            
            // Mise √† jour du titre du mois
            monthElement.textContent = currentDate.toLocaleDateString('fr-FR', {
                month: 'long',
                year: 'numeric'
            });
            
            grid.innerHTML = '';
            
            // En-t√™tes des jours
            ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'].forEach(day => {
                const dayHeader = document.createElement('div');
                dayHeader.className = 'calendar-day-header';
                dayHeader.textContent = day;
                grid.appendChild(dayHeader);
            });
            
            const firstDay = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1);
            const lastDay = new Date(currentDate.getFullYear(), currentDate.getMonth() + 1, 0);
            
            // Calcul du jour de la semaine du premier jour (0 = dimanche, 1 = lundi, etc.)
            let startDay = firstDay.getDay();
            startDay = startDay === 0 ? 6 : startDay - 1; // Ajustement pour commencer par lundi
            
            // Jours vides du d√©but
            for (let i = 0; i < startDay; i++) {
                const emptyDay = document.createElement('div');
                emptyDay.className = 'calendar-day other-month';
                grid.appendChild(emptyDay);
            }
            
            // Jours du mois
            for (let i = 1; i <= lastDay.getDate(); i++) {
                const day = document.createElement('div');
                day.className = 'calendar-day';
                day.textContent = i;
                
                const date = new Date(currentDate.getFullYear(), currentDate.getMonth(), i);
                const hasData = datesWithData.some(d => 
                    d.date.getDate() === date.getDate() &&
                    d.date.getMonth() === date.getMonth() &&
                    d.date.getFullYear() === date.getFullYear()
                );
                
                if (hasData) {
                    day.classList.add('has-data');
                    day.title = 'Cliquer pour voir les messages de cette date';
                }
                
                if (selectedDate && 
                    selectedDate.getDate() === date.getDate() &&
                    selectedDate.getMonth() === date.getMonth() &&
                    selectedDate.getFullYear() === date.getFullYear()) {
                    day.classList.add('selected');
                }
                
                day.addEventListener('click', () => {
                    if (hasData) {
                        selectDate(date);
                    }
                });
                
                grid.appendChild(day);
            }
        }

        // S√©lection d'une date
        function selectDate(date) {
            selectedDate = date;
            const matchingRows = findEntriesByDate(date);
            displayResults(matchingRows, `Messages du ${formatDateForDisplay(date)}`);
            renderCalendar(); // Re-rendre pour mettre √† jour la s√©lection
        }

        // Recherche des entr√©es par date
        function findEntriesByDate(date) {
            const dateColumnIndex = 1; // Colonne B
            
            return sheetData.filter(row => {
                const rowDateStr = row[dateColumnIndex] || '';
                const rowDate = parseDate(rowDateStr);
                return rowDate && 
                       rowDate.getDate() === date.getDate() &&
                       rowDate.getMonth() === date.getMonth() &&
                       rowDate.getFullYear() === date.getFullYear();
            });
        }

        // Parse une date
        function parseDate(dateStr) {
            // Essayer diff√©rents formats de date
            const formats = [
                /(\d{2})\/(\d{2})\/(\d{4})/, // DD/MM/YYYY
                /(\d{4})-(\d{2})-(\d{2})/,   // YYYY-MM-DD
                /(\d{2})-(\d{2})-(\d{4})/    // DD-MM-YYYY
            ];
            
            for (const format of formats) {
                const match = dateStr.match(format);
                if (match) {
                    if (format === formats[0]) {
                        return new Date(match[3], match[2] - 1, match[1]);
                    } else {
                        return new Date(match[1], match[2] - 1, match[3]);
                    }
                }
            }
            
            // Essayer le parsing natif
            const nativeDate = new Date(dateStr);
            return isNaN(nativeDate.getTime()) ? null : nativeDate;
        }

        // Formatage d'une date pour l'affichage
        function formatDateForDisplay(date) {
            return date.toLocaleDateString('fr-FR', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        }

        // Affichage des suggestions de recherche
        function showSearchSuggestions(searchTerm) {
            const suggestionsContainer = document.getElementById('suggestionsContainer');
            
            if (!searchTerm || searchTerm.length < 2) {
                suggestionsContainer.style.display = 'none';
                return;
            }
            
            // Trouver les dates et lieux correspondant aux entr√©es qui contiennent le terme recherch√©
            const matchingSuggestions = findSuggestionsForSearchTerm(searchTerm);
            
            if (matchingSuggestions.length === 0) {
                suggestionsContainer.style.display = 'none';
                return;
            }
            
            suggestionsContainer.innerHTML = matchingSuggestions
                .slice(0, 8) // Limiter √† 8 suggestions
                .map(suggestion => {
                    return `
                        <div class="suggestion-item" data-type="${suggestion.type}" data-value="${suggestion.value}">
                            ${suggestion.type === 'date' ? 'üìÖ' : 'üìç'} ${suggestion.display}
                        </div>
                    `;
                })
                .join('');
            
            suggestionsContainer.style.display = 'block';
            
            // Ajouter les √©v√©nements de clic
            document.querySelectorAll('.suggestion-item').forEach(item => {
                item.addEventListener('click', function() {
                    const type = this.getAttribute('data-type');
                    const value = this.getAttribute('data-value');
                    
                    if (type === 'date') {
                        const date = new Date(value);
                        selectDate(date);
                    } else if (type === 'lieu') {
                        currentFilter = value;
                        currentFilterType = 'lieu';
                        const results = filterDataByType(value, 'lieu');
                        displayResults(results, `Lieu: ${value}`);
                    }
                    
                    suggestionsContainer.style.display = 'none';
                    document.getElementById('searchInput').value = '';
                });
            });
        }

        // Trouver les suggestions pour un terme de recherche
        function findSuggestionsForSearchTerm(searchTerm) {
            const searchLower = searchTerm.toLowerCase();
            const suggestions = [];
            const dateColumnIndex = 1; // Colonne B
            const lieuColumnIndex = headers.findIndex(h => 
                h.toLowerCase().includes('lieu') && h.toLowerCase().includes('√©v√©nement')
            );
            
            // Rechercher dans les dates
            datesWithData.forEach(item => {
                if (item.dateStr.toLowerCase().includes(searchLower)) {
                    suggestions.push({
                        type: 'date',
                        value: item.date.toISOString(),
                        display: formatDateForDisplay(item.date)
                    });
                }
            });
            
            // Rechercher dans les lieux
            if (lieuColumnIndex !== -1) {
                allLieux.forEach(lieu => {
                    if (lieu.toLowerCase().includes(searchLower)) {
                        suggestions.push({
                            type: 'lieu',
                            value: lieu,
                            display: lieu
                        });
                    }
                });
            }
            
            return suggestions;
        }

        // Gestion de la recherche
        function handleSearch(event) {
            event.preventDefault();
            const searchValue = document.getElementById('searchInput').value.trim();
            
            if (!searchValue) {
                alert('Veuillez entrer un mot ou une phrase pour la recherche');
                return;
            }
            
            // Cacher les suggestions
            document.getElementById('suggestionsContainer').style.display = 'none';
            
            currentFilter = searchValue;
            currentFilterType = 'search';
            const results = searchData(searchValue);
            displayResults(results, `R√©sultats pour "${searchValue}"`);
        }

        // Recherche dans les donn√©es
        function searchData(searchValue) {
            const searchLower = searchValue.toLowerCase();
            return sheetData.filter(row => 
                row.some(cell => cell && cell.toLowerCase().includes(searchLower))
            );
        }

        // Affichage de tous les messages
        function showAllData() {
            currentFilter = null;
            currentFilterType = null;
            displayResults(sheetData, 'Tous les messages');
        }

        // Affichage des r√©sultats
        function displayResults(results, title) {
            const content = document.getElementById('resultContent');
            const resultTitle = document.getElementById('resultTitle');
            
            if (results.length === 0) {
                content.innerHTML = `
                    <div class="empty-state">
                        <h3>‚ùå Aucun message trouv√©</h3>
                        <p>Aucun message ne correspond √† votre recherche</p>
                    </div>
                `;
            } else {
                let html = '';
                
                results.forEach((row, index) => {
                    // Recherche des index des colonnes importantes
                    const dateIndex = 1; // Colonne B pour la date
                    const nomIndex = headers.findIndex(h => 
                        h.toLowerCase().includes('votre') && h.toLowerCase().includes('nom')
                    );
                    const lieuIndex = headers.findIndex(h => 
                        h.toLowerCase().includes('lieu') && h.toLowerCase().includes('√©v√©nement')
                    );
                    const paysIndex = headers.findIndex(h => h.toLowerCase().includes('pays'));
                    const messageIndex = headers.findIndex(h => 
                        h.toLowerCase().includes('votre') && h.toLowerCase().includes('message')
                    );
                    
                    const dateStr = row[dateIndex] || 'Date non sp√©cifi√©e';
                    const nom = row[nomIndex] || 'Anonyme';
                    const lieu = row[lieuIndex] || 'Lieu non sp√©cifi√©';
                    const pays = row[paysIndex] || 'Pays non sp√©cifi√©';
                    const message = row[messageIndex] || '';
                    
                    html += `
                        <div class="entry-item">
                            <div class="entry-header">
                                <div class="entry-date">${dateStr}</div>
                                <div class="entry-location">${lieu}, ${pays}</div>
                            </div>
                            <div class="entry-details">
                                <div class="detail-item">
                                    <div class="detail-label">Nom:</div>
                                    <div class="detail-value">${nom}</div>
                                </div>
                                <div class="detail-item">
                                    <div class="detail-label">Lieu:</div>
                                    <div class="detail-value">${lieu}</div>
                                </div>
                                <div class="detail-item">
                                    <div class="detail-label">Pays:</div>
                                    <div class="detail-value">${pays}</div>
                                </div>
                            </div>
                            ${message ? `
                            <div class="message-content">
                                <div class="detail-label">Message:</div>
                                <div class="detail-value">${message}</div>
                            </div>
                            ` : ''}
                        </div>
                    `;
                });
                
                content.innerHTML = html;
            }
            
            resultTitle.textContent = `${title} (${results.length} message${results.length > 1 ? 's' : ''})`;
            document.getElementById('resultsSection').style.display = 'block';
            
            // D√©filement vers la section des r√©sultats
            document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
        }

        // Navigation dans le calendrier
        function prevMonth() {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        }

        function nextMonth() {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        }

        // Fermeture des r√©sultats
        function closeResults() {
            document.getElementById('resultsSection').style.display = 'none';
        }

        // Affichage des informations de donn√©es
        function showDataInfo() {
            document.getElementById('dataInfo').innerHTML = `
                <div style="background: #d4edda; color: #155724; padding: 15px; border-radius: 5px; margin: 10px 0; text-align: center;">
                    ‚úÖ Livre d'or charg√© avec succ√®s : ${sheetData.length} message${sheetData.length > 1 ? 's' : ''}
                </div>
            `;
        }

        // Affichage des erreurs
        function showError(message) {
            document.getElementById('dataInfo').innerHTML = `
                <div class="error-message">
                    ‚ùå ${message}
                </div>
            `;
        }
    </script>
</body>
</html>
